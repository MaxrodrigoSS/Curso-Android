<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundVolei"
    android:gravity="center"
    tools:context=".placarVolei">

    <RelativeLayout
        android:id="@+id/container1"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/menosT1VL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-1"
            />

        <TextView
            android:id="@+id/pontosT1VL"
            android:textColor="@color/colorRed"
            android:text="0"
            android:layout_centerHorizontal="true"
            android:layout_margin="10sp"
            android:textSize="104sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_below="@id/pontosT1VL"
            android:textColor="@color/colorRed"
            android:text="Time 1"
            android:layout_centerHorizontal="true"
            android:textSize="34sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_height="wrap_content">

        <TextView
            android:text="x"
            android:textColor="@color/colorRed"
            android:gravity="center"
            android:textSize="104sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/zerarBtn"
            android:layout_width="wrap_content"
            android:text="ZERAR"
            android:layout_height="wrap_content"/>
    </LinearLayout>



    <RelativeLayout
        android:id="@+id/container2"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/menosT2VL"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-1" />

        <TextView
            android:id="@+id/pontosT2VL"
            android:textColor="@color/colorRed"
            android:text="0"
            android:layout_margin="10sp"
            android:layout_centerHorizontal="true"
            android:textSize="104sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_below="@id/pontosT2VL"
            android:textColor="@color/colorRed"
            android:text="Time 2"
            android:layout_centerHorizontal="true"
            android:textSize="34sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>
</LinearLayout>