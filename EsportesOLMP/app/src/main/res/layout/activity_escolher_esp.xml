<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack"
    tools:context=".EscolherESP">

    <TextView
        android:id="@+id/volei"
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:drawableBottom="@drawable/iconVolei"/>

    <TextView
        android:id="@+id/basquete"
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:layout_alignParentRight="true"
        android:drawableBottom="@drawable/iconbasquete"/>

    <TextView
        android:id="@+id/ping"
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:layout_marginVertical="380sp"
        android:drawableBottom="@drawable/iconPong"/>
    <TextView
        android:id="@+id/futebol"
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:layout_alignParentRight="true"
        android:layout_marginVertical="380sp"
        android:drawableBottom="@drawable/iconFutebol"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="680sp"
        android:text="Continuar"/>
</RelativeLayout>