<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EscolherESP">


    <TextView
        android:id="@+id/volei"
        android:layout_width="500px"
        android:layout_height="500px"
        android:layout_marginVertical="50px"
        android:drawableBottom="@drawable/iconVolei" />

    <TextView
        android:id="@+id/basquete"
        android:layout_width="500px"
        android:layout_height="500px"
        android:layout_marginVertical="50px"
        android:layout_alignParentRight="true"
        android:drawableBottom="@drawable/iconbasquete" />


    <TextView
        android:id="@+id/pong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginVertical="800px"
        android:padding="50sp"
        android:text="Ping Pong" />

    <TextView
        android:id="@+id/futebol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="800px"
        android:padding="50sp"
        android:text="Futebol de Praia" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="680sp"
        android:text="CONTINUAR"/>



</RelativeLayout>